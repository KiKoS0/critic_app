<%= form_for(@review) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :name, 'Name(required):' %>
    <%= f.text_field :name, placeholder: "Anonymous" %>
    <%= f.hidden_field :prof_id %>
    <br>
    <%= f.label :email, 'Email(Optional):' %>
    <%= f.email_field :email, placeholder: "will not be viewed"%>
    <%= f.text_area :content, placeholder: "Review..." %>
    <%= f.label 'flag', 'Is your review positive?' %>
    <br>
    <%= f.radio_button :like, true%>
    <%= f.label 'flag_true', 'YES' %>
    <%= f.radio_button :like, false%>
    <%= f.label 'flag_false', 'NO' %>



  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
